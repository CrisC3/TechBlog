
  <div class="comments">
    {{#each this}}
    <section class="comment">
      <div class="comment-header">
        <h1>User Comment</h1>
      </div>
      <div class="comment-body">
        <div class="comment-content">
        {{comment}}
      </div>
      <br>
      <div class="meta">
        &ndash; {{username}} on {{format_date createdAt}}
      </div>
      </div>
    </section>
    {{/each}}
  </div>
